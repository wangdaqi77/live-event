<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/post1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="15dp"

            android:text="postValue"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/postM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="15dp"

            android:text="5次postValue"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/set1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="15dp"

            android:text="setValue"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/setM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="15dp"

            android:text="5次setValue"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/addGlobalDispatcher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="15dp"

                android:text="全局设置自定义线程"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/removeGlobalDispatcher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="15dp"

                android:text="←移除全局设置"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/observe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="15dp"

                android:text="observe"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/observe1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="15dp"

                android:text="←移除"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/observec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="15dp"

                android:text="observe使用BackgroundObserver\n设置指定线程接收"
                android:textColor="@android:color/black"
                android:textSize="12sp" />


            <Button
                android:id="@+id/observec1"
                android:layout_width="0dp"
                android:layout_height="match_parent"


                android:layout_weight="1"
                android:gravity="center"
                android:minHeight="15dp"

                android:text="←移除"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/buttonClean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:minHeight="15dp"

            android:text="清空log"
            android:textColor="@android:color/black"
            android:textSize="12sp" />


        <Button
            android:id="@+id/backgOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="15dp"

            android:text="[开启]间隔5s postValue"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/backgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="15dp"

            android:text="[关闭]间隔5s postValue"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#36B"
        android:fadeScrollbars="false"
        android:scrollbars="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fullscreen_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="嘎嘎嘎" />

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>